import pywhatkit as kit

numere=["+40756528688","+40750726482"]

minut=23



for i in range(2):
    try:
        kit.sendwhatmsg(numere[i],"Vorbeste frumos, puisor!",19,minut,wait_time=12,tab_close=True,close_time=2)
        minut+=1

        
    except:
        print("exception")

#fereastra pop-up: Mesajele au fost trimise
